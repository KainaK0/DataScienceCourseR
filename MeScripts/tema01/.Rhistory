rescale.many <- function(dataframe,cols){
names <- names(dataframe)
for (col in cols) {
name <- paste(names[col],"rescaled",sep = ".")
dataframe[name] <- rescale(dataframe[,col])
}
cat(paste("Hemos rescalado",length(cols),"variable(S)"))
dataframe
}
